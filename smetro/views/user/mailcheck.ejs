<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Login</title>
</head>

<body>
    <%-include('../partials/nav') %>
    <div class="container my-4">
        <h1 class="text-center">Thank you for signing up. Please check your email for authentication.</h1>
        <form action="/user/userauthenticated" method="post">
            <div class="form-group">
                <label for="usertoken"><h4>Varification Code</h4></label>
                <input type="text" maxlength="20" class="form-control" id="username" name="username" value="<%=username%>"
                    aria-describedby="emailHelp" placeholder="Not email" required>
                <input type="text" maxlength="20" class="form-control" id="usernid" name="usernid" value="<%=usernid%>"
                    aria-describedby="emailHelp" placeholder="" required>
                <input type="text" maxlength="50" class="form-control" id="useremail" name="useremail" value="<%=useremail%>"
                    aria-describedby="emailHelp" required>
                <input type="text" class="form-control" id="phone" name="userphone" value="<%=userphone%>" 
                                                    maxlength="11" pattern="[0-9]{11}" 
                                                    placeholder="01XXXXXXXXX(Use only digits)" required>
                <input type="text" maxlength="23" class="form-control" id="userpassword" name="userpassword" value="<%=userpassword%>" required>
                <input type="text" maxlength="23" class="form-control" id="cuserpassword" name="cuserpassword" value="<%=cuserpassword%>" required>
                <input type="text" maxlength="1000" class="form-control" id="usertoken" name="usertoken"
                    aria-describedby="emailHelp" required>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button><br><br>
        </form>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>
</body>

</html>