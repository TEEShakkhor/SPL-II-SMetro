<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Door System</title>

    <style>
        .alert-box {
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border: 1px solid transparent;
        }

        .alert-box.success {
            background-color: #d4edda;
            color: #155724;
            border-color: #c3e6cb;
        }

        .alert-box.error {
            background-color: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }
    </style>

</head>

<body>
    <div class="card shadow mb-4 my-2">
        <%if(typeof no_err != 'undefined'){
            no_err.forEach(no_err => {
                %>
                    <div class="jumbotron">
                        <div class="alert-box success">
                            <span class="alert-box-close float-right" onclick="this.parentElement.style.display='none';">&times;</span>
                            <strong>Success!</strong> <%=no_err.message%>
                        </div>
                        <a href="/user/dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
                    </div>
                    
                <%
            }) %>
            <%
                delete no_err;
            } %>
        
            <%if(typeof error != 'undefined'){
                error.forEach(error => {
                    %>
                        <div class="jumbotron">
                            <div class="alert-box error">
                                <span class="alert-box-close float-right" onclick="this.parentElement.style.display='none';">&times;</span>
                                <strong>Error!</strong> <%=error.message%>
                            </div>
                            <a href="/user/dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
                        </div>            
                    <%
                }) %>
            <%
                delete error;
            } %>
    </div>
    
    



