    <title>QR Scanner</title>

<body>
    <%-include('../partials/navlogged') %>
    <br><br>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5-qrcode/2.3.4/html5-qrcode.min.js"
        integrity="sha512-k/KAe4Yff9EUdYI5/IAHlwUswqeipP+Cp5qnrsUjTPCgl51La2/JhyyjNciztD7mWNKLSXci48m7cctATKfLlQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <style>
        main {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #reader {
            width: 600px;
        }

        #result {
            text-align: center;
            font-size: 1.5rem;
        }
    </style>
    <main>
        <div id="reader"></div>
        <div id="result"></div>
    </main>
    <script>
        const scanner = new Html5QrcodeScanner("reader", {
            qrbox: {
                width: 250,
                height: 250,
            },
            fps: 20,
        });
        scanner.render(success, error);
        function success(result) {
            result = result.replace(/"/g, '');
            // send the result to the server
            fetch('/api/scan', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ result: result })
            })
            .then(response => response.json())
            .then(data =>{
                console.log(data);
                window.location.replace('/user/dashboard');
            })
            .catch(error => console.error(error));

            document.getElementById("result").innerHTML = `
                <h2>Checking Your Ticket.</h2>
                <form id="redirect-form" method="POST" action="/user/checkValidity">
                    <input type="hidden" name="result" value="${result}">
                    <button type="submit" id="redirect-button" style="display: none;">Redirecting...</button>
                </form>
                <p>Redirecting in 5 seconds...</p>
            `;

            setTimeout(() => {
                document.getElementById("redirect-button").click();
            }, 5000);

            scanner.clear();
            document.getElementById("reader").remove();
        }
        function error(err) {
            console.error(err);
        }
    </script>

    <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
