<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Stuck Passengers</title>
    <%-include('../partials/header') %>
</head>

<body>
    
    <section class="vh-100" style="background-image: url('../img/metro4.jpg'); 
            background-size: cover; background-position: center; margin-top: -10px;">
            <%-include('../partials/navadmin') %>
            
            <h1 class="mb-3 text-white text-center" style="margin-top: 50px;">Available Tickets</h1>

            <div class="container py-5 h-100" style="max-width: 90%">
                <div class="row d-flex justify-content-center h-100">
                <div class="col col-xl-10">

                    <!-- Paste rest of the code -->
                    <div class="container my-4">
                        <div class="jumbotron">
                            <h1 class="text-center">Due payments</h1>
                            <div class="card shadow mb-4 my-2">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-info text-center">List of Dues</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-borderless" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Resevation ID</th>
                                                    <th>Name</th>
                                                    <th>Phone Number</th>
                                                    <th>Extra charge</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% results.rows.forEach(function(data) { %>
                                                    <tr>
                                                        <td>
                                                            <%= data.reservationid %>
                                                        </td>
                                                        <td>
                                                            <%= data.username %>
                                                        </td>
                                                        <td>
                                                            <%= data.userphone %>
                                                        </td>
                                                        <td>
                                                            <%= data.extracharge.toFixed(2) %>
                                                        </td>
                                                        <td>
                                                            <form action="/admin/release" method="post">
                                                                <input type="hidden" maxlength="50" class="form-control" 
                                                                id="reservationid" name="reservationid" aria-describedby="emailHelp" value=<%= data.reservationid %> required>
                                                                <button type="submit" class="btn btn-danger">Release</button><br><br>
                                                            </form>
                                                            
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>  
                        </div>
                    <!-- Paste rest of the code -->





                
            </div>
          </div>
        </section>
      </div>


    <%-include('../partials/footer') %>
    

    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>
</body>

</html>